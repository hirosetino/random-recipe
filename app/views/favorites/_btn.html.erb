<div class="favorite-area">
    <%= turbo_frame_tag dom_id(recipe, :favorite) do %>
        <% if recipe.favorited_by?(current_user) %>
            <%= link_to recipe_favorites_path(recipe), data: { turbo_method: :delete, turbo_frame: "favorite-btn#{recipe.id}" }, class: "favorite-btn" do %>
                <i class="fa-solid fa-star" aria-hidden="true" style="color: orange;"></i>
                <%= recipe.favorites.count %>
            <% end %>
        <% else %>
            <%= link_to recipe_favorites_path(recipe), data: { turbo_method: :post, turbo_frame: "favorite-btn#{recipe.id}" }, class: "favorite-btn" do %>
                <i class="fa-solid fa-star" aria-hidden="true"></i>
                <%= recipe.favorites.count %>
            <% end %>
        <% end %>
    <% end %>
</div>
