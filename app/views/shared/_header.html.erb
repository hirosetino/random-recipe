<%# CSS・・・assets/stylesheets/shared/header.css %>
<header>
    <div class="header-container">
        <div class="header-left">
            <%= image_tag 'ルーレット.jpeg', class: "icon" %>
            <h1><%= link_to 'RandomRecipe', "#", class: "app-title" %></h1>
        </div>
        <div class="header-right">
            <ul>
                <% if user_signed_in? %>
                    <li><%= link_to current_user.nickname, user_path(current_user.id), class: "nickname" %></li>
                    <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %></li>
                    <div class="recipes-create"><%= link_to 'レシピ投稿', new_recipe_path, class: "recipes-create-btn" %></div>
                <% else %>
                    <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
                    <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
                    <div class="recipes-create"><%= link_to 'レシピ投稿', new_recipe_path, class: "recipes-create-btn" %></div>
                <% end %>
            </ul>
            <div class="ham-images">
                <div class="recipes-create"><%= link_to 'レシピ投稿', new_recipe_path, class: "recipes-create-btn" %></div>
                <%= image_tag 'ham-menu-image01.png', class: "ham-img1", id: "open_hum" %>
                <%= image_tag 'ham-menu-image02.png', class: "ham-img2", id: "close_hum" %>
            </div>
        </div>
        <div class="ham-menu" id="hum_menu">
            <ul>
                <% if user_signed_in? %>
                    <li><%= link_to current_user.nickname, user_path(current_user.id), class: "ham-nickname" %></li>
                    <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "ham-logout" %></li>
                <% else %>
                    <li><%= link_to 'ログイン', new_user_session_path, class: "ham-login" %></li>
                    <li><%= link_to '新規登録', new_user_registration_path, class: "ham-sign-up" %></li>
                <% end %>
            </ul>
        </div>
    </div>
</header>