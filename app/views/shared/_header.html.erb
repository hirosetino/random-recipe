<%# CSS・・・assets/stylesheets/shared/header.css %>
<header>
    <div class="header-container">
        <div class="header-left">
            <h1><%= link_to 'RandomRecipe', "#", class: "app-title" %></h1>
        </div>
        <div class="header-right">
            <ul>
                <%# if user_signed_in? %>
                    <li><%= link_to '#', "#", class: "nickname" %></li>
                    <li><%= link_to 'ログアウト', "#", data: { turbo_method: :delete }, class: "logout" %></li>
                <%# else %>
                    <li><%= link_to 'ログイン', "#", class: "login" %></li>
                    <li><%= link_to '新規登録', "#", class: "sign-up" %></li>
                <%# end %>
            </ul>
            <div class="recipes-create"><%= link_to 'レシピ投稿', "#", class: "recipes-create-btn" %></div>
        </div>
    </div>
</header>